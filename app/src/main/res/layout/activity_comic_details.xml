<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.comicDetails.ComicDetailsActivity">

    <fragment
        android:id="@+id/frag_comic_images"
        android:name="com.example.tainguyen.mvvm.presentation.comicDetails.ComicImagesFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/frag_comic_details"
        app:layout_constraintTop_toTopOf="parent"/>

    <fragment
        android:id="@+id/frag_comic_details"
        android:name="com.example.tainguyen.mvvm.presentation.comicDetails.ComicDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_comic_images"
        />
</android.support.constraint.ConstraintLayout>